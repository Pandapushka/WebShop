@using OnlineShopWebApp.Areas.Admin.Models
@model UserEnter
<form method="post">
    <h4>Вход</h4>
    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
    <br />
    <div class="row mb-3">
        <label asp-for="Login" class="col-sm-1 col-form-label">Email</label>
        <div class="col-sm-3">
            <input asp-for="Login" type="email" class="form-control" placeholder="Email">
            <span asp-validation-for="Login"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Password" class="col-sm-1 col-form-label">Пароль</label>
        <div class="col-sm-3">
            <input asp-for="Password" type="password" class="form-control" placeholder="*********">
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm offset">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" value="true">
                <label class="form-check-label" for="rememberMe">
                    Запомнить меня?
                </label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="login" asp-action="enter">Войти</button>
    <a type="submit" class="btn btn-outline-primary" asp-controller="login" asp-action="Registration" asp-route-RetunrUrl="@Model.ReturnUrl">Зарегистрироваться</a>
</form>


