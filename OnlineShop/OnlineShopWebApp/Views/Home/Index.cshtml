@using OnlineShopWebApp.Areas.Admin.Models
@model List<ProductViewModel>
<div class="container">
	<div class="container carousel_style inner">
		<div class="row">
			<div class="col-lg-12 carousel_style">
				<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
						<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
						<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
					</ol>
					<div class="carousel-inner">
						<div class="carousel-item active carousel_style">
							<img class="d-block img-fluid" src="/image/p3.jpg" alt="First slide">
						</div>
						<div class="carousel-item">
							<img class="d-block img-fluid" src="/image/p2.jpg" alt="Second slide">
						</div>
						<div class="carousel-item">
							<img class="d-block img-fluid" src="/image/p1.jpg" alt="Third slide">
						</div>
					</div>
					<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
		</div>
	</div>
    <br/>
	<div class="container">
		<div class="row">
			@foreach (var prod in Model)
			{
				<div class="col-lg-3 col-md-6 mb-4">
					<a href="/product/index/@prod.Id" role="button"><img class="card-img-top" src="@prod.ImagePath"></a>
					<br />
					<div class="text-center">
						<h5 class="text-capitalize font-weight-bold">@prod.Name</h5>
						<h3 class="text-secondary font-weight-light">@prod.Cost руб.</h3>
					</div>
				</div>
			}
		</div>
	</div>
</div>




