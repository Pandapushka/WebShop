@using OnlineShopWebApp.Areas.Admin.Models
@model List<UserVM>
<div class="row">
	<div class="col-3">
		@await Html.PartialAsync("AdminLeftMenu")
	</div>
    @if (Model == null || Model.Count == 0)
	{
		<h3 class="text-center">Пользователи еще не созданы!</h3>
	}
     else
     {
        <div class="col-9">
            <h3>Cписок пользователей</h3>
            <div class="row">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Логин</th>
                                <th>Телефон</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="col-3"><a style="color:navy" asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-name="@item.UserName"><p>@item.UserName</p></a></td>
                                    <td>@item.Phone</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
     }	
</div>