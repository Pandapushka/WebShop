@using OnlineShopWebApp.Areas.Admin.Models
@model EditProductViewModel

<form method="post">
    <h4>Редактирование товара</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
    <div class="row">
        <label asp-for="Name" class="col-sm-2 col-form-label">название товара:</label>
        <div class="col-sm-8">
            <input asp-for="Name" type="text" class="form-control" value="@Model.Name">
            <span asp-validation-for="Name"/>
        </div>
    </div>
    <br />
    <div class="row">
        <label asp-for="Cost" class="col-sm-2 col-form-label">цена товара, руб.:</label>
        <div class="col-sm-8">
            <input Asp-for="Cost" type="number" class="form-control" value="@Model.Cost">
            <span asp-validation-for="Cost" />
        </div>
    </div>
    <br />
    <div class="row">
        <label asp-for="Description" class="col-sm-2 col-form-label">описание товара:</label>
        <div class="col-sm-8">
            <input asp-for="Description" type="text" class="form-control" value="@Model.Description">
            <span asp-validation-for="Description" />
        </div>
    </div>
    <br />
    <div class="row">
        <label asp-for="UploadedFiles" class="col-sm-2 col-form-label">Изображение:</label>
        <div class="col-sm-8">
            <input asp-for="UploadedFiles"  class="form-control" type="file" multiple accept="image/*" />
            <span asp-validation-for="UploadedFiles" />
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id">Сохранить</button>
    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Product" asp-action="Products">Отмена</a>
</form>