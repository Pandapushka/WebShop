@model List<OrderVM>;
@{
    int i = 1;
}
<div class="row">
    <div class="col-3">
        @await Html.PartialAsync("AdminLeftMenu")
    </div>
    @if (Model == null || Model.Count == 0)
    {
        <h3 class="text-center">Заказы еще не созданы!</h3>
    }
    else
    {
        <div class="col-9">
            <h3 class="text-center">Список заказов</h3>
            <br />
            <div class="row">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Статус</th>
                                <th>Дата</th>
                                <th>Время</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @i</td>
                                    <td>@EnumHelper.GetDisplayName(item.Status)</td>
                                    <td class="col-2">@item.CreateDateTime.ToString("d")</td>
                                    <td class="col-2">@item.CreateDateTime.ToString("t")</td>
                                    <td class="col-2"><a asp-area="Admin" asp-controller="Order" asp-action="OrderDetails" asp-route-orderId=@item.Id>Подробнее</a></td>

                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }    
</div>