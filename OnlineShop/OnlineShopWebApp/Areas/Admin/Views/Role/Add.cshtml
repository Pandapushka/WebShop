@using OnlineShopWebApp.Areas.Admin.Models
@model Role

<form method="post">
    <h4>Создание новой роли</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
    <div class="row">
        <label asp-for="Name" class="col-sm-2 col-form-label">название роли:</label>
        <div class="col-sm-8">
            <input asp-for="Name" type="text" class="form-control">
            <span asp-validation-for="Name" />
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-area="Admin" asp-controller="Role" asp-action="Add" >Сохранить</button>
    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Role" asp-action="Roles">Назад</a>
</form>